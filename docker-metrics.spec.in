%define prefix   /opt/work
%define debug_package %{nil}

Summary: Utility of collect docker metrics to open-falcon
Name: docker-metrics
Version: @@VERSION@@
Release: @@RELEASE@@
License: GPL
URL: https://github.com/mesos-utility/docker-metrics/
Group: Applications/System
Source0: https://github.com/mesos-utility/docker-metrics/archive/docker-metrics-%{version}.tar.gz
BuildRoot: /var/tmp/%name-%{PACKAGE_VERSION}-root
Provides: %{name}-%{version}


%description
docker-metrics is a utility of collect docker metrics to open-falcon.


%prep
%setup -n %{name}-%{version}


%build
make bin


%install
rm -rf $RPM_BUILD_ROOT
mkdir -p ${RPM_BUILD_ROOT}/%{prefix}
make rpm-install BUILD_ROOT=${RPM_BUILD_ROOT}/%{prefix}/%{name} MANDIR=${RPM_BUILD_ROOT}/%{prefix}/%{name}


%files
%defattr(-,root,root)
%{prefix}/%{name}/*


#%post
#/sbin/chkconfig --add %{name}
#
#%preun
#/sbin/chkconfig --del %{name}
#

%clean
rm -rf $RPM_BUILD_DIR/%{prefix}
rm -rf $RPM_BUILD_ROOT


%changelog
